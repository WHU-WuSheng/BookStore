<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>UserInfo</servlet-name>
        <servlet-class>Controller.UserCenter.UserInfoController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>UserInfo</servlet-name>
        <url-pattern>/UserInformation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateInfo</servlet-name>
        <servlet-class>Controller.UserCenter.UpdateInfoController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>updateInfo</servlet-name>
        <url-pattern>/updateBasicInfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updatePassword</servlet-name>
        <servlet-class>Controller.UserCenter.UpdatePassword</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>updatePassword</servlet-name>
        <url-pattern>/updatePassword</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>Controller.search.searchbookservlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/searchbook</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ClearCartServlet</servlet-name>
        <servlet-class>Controller.carts.ClearCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClearCartServlet</servlet-name>
        <url-pattern>/ClearCartServlet.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteBookServlet</servlet-name>
        <servlet-class>Controller.carts.DeleteBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteBookServlet</servlet-name>
        <url-pattern>/DeleteBookServlet.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>gotocarts</servlet-name>
        <servlet-class>Controller.gotocarts.gotocartsservlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>gotocarts</servlet-name>
        <url-pattern>/carts</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateNumServlet</servlet-name>
        <servlet-class>Controller.carts.UpdateNumServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateNumServlet</servlet-name>
        <url-pattern>/UpdateNumServlet.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getbook</servlet-name>
        <servlet-class>Controller.getbook.getbook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getbook</servlet-name>
        <url-pattern>/getbook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controller.Login_Register.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Controller.Login_Register.RegisterServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogOut</servlet-name>
        <servlet-class>Controller.Logout.LogOutController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogOut</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>main.jsp</welcome-file>
    </welcome-file-list>
</web-app>